{
    "compilerOptions": {
        "target": "ES2018",
        "module": "es2015",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "declarationMap": true,
        "noEmit": true,
        "jsx": "react",
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        /* decorators */
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "@/*": ["src/*"],
            "common/*": ["src/common/*"],
            "main/*": ["src/main*"],
            "renderer/*": ["src/renderer*"]
        }
    },
    "exclude": [
        "test",
        "release",
        "src/main.prod.js",
        "src/renderer.prod.js",
        "src/dist",
        ".erb/dll"
    ]
}
